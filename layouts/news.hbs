<a class="c-news c-news--excerpt" href="{{link}}">
  <figure class="c-news__poster">
    <img src="{{image}}" alt="{{title}}">
  </figure>
  <div class="news-tag"><i class="c-icon c-icon--before c-icon--{{category}}-o"></i>{{category}}</div>
  <h4 class="c-news__title">{{title}}</h4>
  <p class="c-news__meta"><time datetime="{{publishDate}}" class="c-news__date">{{publishDate}}</time></p>
  <div class="c-news__teaser">
    {{excerpt}}
  </div>
</a>