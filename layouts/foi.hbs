<a class="c-news c-news--excerpt" href="{{link}}">{{#if image}}
  <figure class="c-news__poster">
    <img src="{{image}}" width="720" height="330" alt="">
  </figure>{{/if}}
  <h4 class="c-news__title">{{title}}</h4>{{#if publishDate}}
  <p class="c-news__event-date"><time datetime="{{publishDate}}" class="c-news__date">{{dateFormat publishDate}}</time></p>{{/if}}
  <div class="c-news__teaser">
    {{{excerpt}}}
  </div>
</a>
