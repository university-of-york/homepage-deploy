<a href="{{bannerLink}}" class="c-figure c-figure--banner c-figure--no-margin c-figure--full-width">{{#if bannerImage}}
  <img class="c-figure__image" src="{{bannerImage}}" alt="{{bannerImageAlt}}">{{/if}}
  <div class="c-figure__content c-figure__content--left c-figure__content--third">
    <h3>{{title}}</h3>
    {{{excerpt}}}
    <button class="c-btn c-btn--medium c-btn--block" role="button">{{buttonText}}</button>
  </div>
</a>
